# GraphRAG for Agent Zero - Environment Configuration
# Feature flag OFF by default - no baseline changes

# Feature flag (set to "true" to enable)
GRAPH_RAG_ENABLED=false

# Neo4j Connection (dedicated instance)
NEO4J_URI=bolt://localhost:7688
NEO4J_HTTP_URI=http://localhost:7475
NEO4J_USER=neo4j
NEO4J_PASSWORD=graphrag123dev
NEO4J_DATABASE=neo4j

# Timeouts
NEO4J_CONNECTION_TIMEOUT_MS=5000
NEO4J_QUERY_TIMEOUT_MS=10000
NEO4J_MAX_RETRIES=3
NEO4J_RETRY_DELAY_MS=100

# Graph expansion limits (hard caps enforced in code)
GRAPH_EXPAND_MAX_HOPS=2
GRAPH_EXPAND_LIMIT=100
GRAPH_MAX_RESULTS=50

# Cache settings
GRAPH_RAG_CACHE_ENABLED=true
GRAPH_RAG_CACHE_TTL=3600
