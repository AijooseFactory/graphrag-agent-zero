# GraphRAG feature flag (OFF by default)
GRAPH_RAG_ENABLED=false

# Neo4j connection (use your Desktop OR the optional neo4j profile)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me

# GraphRAG bounds/safety
GRAPHRAG_MAX_HOPS=2
GRAPHRAG_MAX_NODES=100
GRAPHRAG_QUERY_LIMIT=50
GRAPHRAG_TIMEOUT_MS=1500

# Optional: if using the repoâ€™s docker neo4j profile (example only)
# NEO4J_HTTP_PORT=7474
# NEO4J_BOLT_PORT=7687
